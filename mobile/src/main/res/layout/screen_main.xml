<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbarStyle="outsideInset"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/main_row">

                <TextView
                    style="@style/main_label"
                    android:text="@string/main.label.outerSector"/>

                <Switch
                    android:id="@+id/outerSector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                style="@style/main_row">

                <TextView
                    style="@style/main_label"
                    android:text="@string/main.label.outerSectorColor"/>

                <com.mauriciotogneri.watchfacesectors.ColorDisplayer
                    android:id="@+id/outerSectorColor"
                    style="@style/main_colorDisplayer"/>

            </LinearLayout>

            <LinearLayout
                style="@style/main_row">

                <TextView
                    style="@style/main_label"
                    android:text="@string/main.label.middleSector"/>

                <Switch
                    android:id="@+id/middleSector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                style="@style/main_row">

                <TextView
                    style="@style/main_label"
                    android:text="@string/main.label.middleSectorColor"/>

                <com.mauriciotogneri.watchfacesectors.ColorDisplayer
                    android:id="@+id/middleSectorColor"
                    style="@style/main_colorDisplayer"/>

            </LinearLayout>

            <LinearLayout
                style="@style/main_row">

                <TextView
                    style="@style/main_label"
                    android:text="@string/main.label.innerSector"/>

                <Switch
                    android:id="@+id/innerSector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                style="@style/main_row">

                <TextView
                    style="@style/main_label"
                    android:text="@string/main.label.innerSectorColor"/>

                <com.mauriciotogneri.watchfacesectors.ColorDisplayer
                    android:id="@+id/innerSectorColor"
                    style="@style/main_colorDisplayer"/>

            </LinearLayout>

            <include
                layout="@layout/horizontal_separator"/>

            <LinearLayout
                style="@style/main_row">

                <TextView
                    style="@style/main_label"
                    android:text="@string/main.label.hoursMark"/>

                <Switch
                    android:id="@+id/hoursMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                style="@style/main_row">

                <TextView
                    style="@style/main_label"
                    android:text="@string/main.label.hoursMarkLength"/>

                <EditText
                    android:id="@+id/hoursMarkLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>

            </LinearLayout>

            <LinearLayout
                style="@style/main_row">

                <TextView
                    style="@style/main_label"
                    android:text="@string/main.label.hoursMarkWidth"/>

                <EditText
                    android:id="@+id/hoursMarkWidth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>

            </LinearLayout>

            <LinearLayout
                style="@style/main_row">

                <TextView
                    style="@style/main_label"
                    android:text="@string/main.label.hoursMarkColor"/>

                <com.mauriciotogneri.watchfacesectors.ColorDisplayer
                    android:id="@+id/hoursMarkColor"
                    style="@style/main_colorDisplayer"/>

            </LinearLayout>

            <include
                layout="@layout/horizontal_separator"/>

            <LinearLayout
                style="@style/main_row">

                <TextView
                    style="@style/main_label"
                    android:text="@string/main.label.minutesMark"/>

                <Switch
                    android:id="@+id/minutesMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                style="@style/main_row">

                <TextView
                    style="@style/main_label"
                    android:text="@string/main.label.minutesMarkLength"/>

                <EditText
                    android:id="@+id/minutesMarkLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>

            </LinearLayout>

            <LinearLayout
                style="@style/main_row">

                <TextView
                    style="@style/main_label"
                    android:text="@string/main.label.minutesMarkWidth"/>

                <EditText
                    android:id="@+id/minutesMarkWidth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>

            </LinearLayout>

            <LinearLayout
                style="@style/main_row">

                <TextView
                    style="@style/main_label"
                    android:text="@string/main.label.minutesMarkColor"/>

                <com.mauriciotogneri.watchfacesectors.ColorDisplayer
                    android:id="@+id/minutesMarkColor"
                    style="@style/main_colorDisplayer"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#555555"/>

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main.button.updateProfile"/>

</LinearLayout>